<div id="class_row" class="row">
{% for course in courses %}
	<div class="col-xs-4">
	    	<div class="courseBox">
			<p>
				<a href="{{ path('course_show',{'course_id': course.id })}}">
				{% if imgurls[loop.index0] == "" %}
				<img src="{{asset('bundles/renaissanceweb/img/default/NoPic_S.png')}}">
				{% else %}
				<img src="{{imgurls[loop.index0]}}">
				{% endif %}
				</a>
			</p>
			<p class="title">{{course.name}}</p>
			<div class="row" style="margin:0;">
				<div class="col-xs-6" style="text-align:left;"><p class="content">2014-8-02</p></div>
				<div class="col-xs-6" style="text-align:right;"><p class="content"><span class="glyphicon glyphicon-user"></span> 27168</p></div>
			</div>
		</div>
	</div>
{% endfor %}
</div>
{% if page.hasnextPage is defined and page.hasnextPage %}
<div  id="get_more" class="row" append-to-id="courses" next-page="{{page.nextPage}}" go-to="{{path('get_more_courses')}}">
<div class="col-xs-12" style="text-align:center;">
<p   id="get_more_text" style="font-size:17px;color:#cbcbcb;margin:60px 0px 60px 60px;cursor:pointer" >点击加载更多</p>
</div>
</div>
{% endif %}



